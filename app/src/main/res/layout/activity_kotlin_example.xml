<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/example_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".KotlinExample">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <Button android:id="@+id/slide3"
                android:onClick="onClick"
                android:text="Slide #3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"/>
        <Button android:id="@+id/slide4"
                android:onClick="onClick"
                android:text="Slide #4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"/>
        <Button android:id="@+id/slide6"
                android:onClick="onClick"
                android:text="Slide #6"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"/>
        <Button android:id="@+id/slide10"
                android:onClick="onClick"
                android:text="Slide #10"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"/>
    </LinearLayout>
</ScrollView>